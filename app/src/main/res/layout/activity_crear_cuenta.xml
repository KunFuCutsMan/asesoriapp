<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logosinletras"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llena el formulario para crear tu cuenta"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Tarjeta contenedora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp"
            tools:ignore="ExtraText">

            <!-- Campos de entrada con estilo -->
            <EditText
                android:id="@+id/edtNombres"
                style="@style/CustomEditText"
                android:hint="Nombre"
                android:maxLength="32" />

            <EditText
                android:id="@+id/edtApellidoP"
                style="@style/CustomEditText"
                android:hint="Apellido Paterno"
                android:maxLength="32" />

            <EditText
                android:id="@+id/edtApellidoM"
                style="@style/CustomEditText"
                android:hint="Apellido Materno"
                android:maxLength="32" />

            <EditText
                android:id="@+id/edtNumControl"
                style="@style/CustomEditText"
                android:hint="Número de Control"
                android:inputType="number"
                android:maxLength="8" />

            <EditText
                android:id="@+id/edtNumTel"
                style="@style/CustomEditText"
                android:hint="Número de Teléfono"
                android:inputType="phone"
                android:maxLength="10" />

            <EditText
                android:id="@+id/edtSemestre"
                style="@style/CustomEditText"
                android:hint="Semestre Actual"
                android:inputType="number"
                android:maxLength="2" />

            <EditText
                android:id="@+id/edtCarrera"
                style="@style/CustomEditText"
                android:hint="Carrera"
                android:inputType="number"
                android:maxLength="11" />

            <EditText
                android:id="@+id/edtContrasena"
                style="@style/CustomEditText"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="72" />

            <EditText
                android:id="@+id/edtRepetirContrasena"
                style="@style/CustomEditText"
                android:hint="Repite Contraseña"
                android:inputType="textPassword"
                android:maxLength="72" /> />
        </LinearLayout>

        <!-- Botón Crear Cuenta -->
        <Button
            android:id="@+id/btnCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:background="@drawable/button_background"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Botón para ir al inicio de sesión, abajo y centrado -->
        <Button
            android:id="@+id/btnIrInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#FF0000"
            android:text="¿Ya tienes cuenta? Ve al inicio de sesión"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
