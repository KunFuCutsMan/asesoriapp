<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtAdvertencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta secciÃ³n es exclusiva para administradores. Si no eres uno, te invitamos amablemente a regresar a la pantalla anterior para continuar con tu experiencia en la app.."
